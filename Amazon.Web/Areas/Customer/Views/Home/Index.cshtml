@model List<Product>

@{
    ViewData["Title"] = "Index";
}

@section Styles {
    <link rel="stylesheet" href="/css/customerHome.css" />
    <style>
        /* Custom Styles */
        .product-grid {
            border: 1px solid #ddd;
            margin: 10px;
            transition: transform 0.3s ease;
        }

            .product-grid:hover {
                transform: translateY(-5px);
            }

        .product-content {
            padding: 15px;
            text-align: center;
        }

            .product-content .title {
                font-size: 1.2em;
                font-weight: bold;
                color: #ff9800;
            }

            .product-content .price {
                font-size: 1.1em;
                color: #e68a00;
                margin-bottom: 10px;
            }

            .product-content .desc {
                color: #555;
                font-size: 0.9em;
                margin-bottom: 10px;
            }

        .product-links {
            list-style: none;
            padding: 0;
            display: flex;
            justify-content: center;
        }

            .product-links li {
                margin: 0 10px;
            }

                .product-links li a,
                .product-links li button {
                    background-color: #ff9800;
                    color: #fff;
                    border: none;
                    padding: 8px;
                    border-radius: 50%;
                    font-size: 1.2em;
                    transition: background-color 0.3s ease;
                }

                    .product-links li a:hover,
                    .product-links li button:hover {
                        background-color: #e68a00;
                    }

        .product-image {
            position: relative;
            overflow: hidden;
        }

            .product-image img {
                width: 100%;
                height: 200px;
                object-fit: cover;
                transition: opacity 0.3s ease;
            }

            .product-image .pic-2 {
                position: absolute;
                top: 0;
                left: 0;
                opacity: 0;
            }

        .product-grid:hover .product-image .pic-2 {
            opacity: 1;
        }

        .product-sale-label {
            background-color: #ff9800;
            color: #fff;
            padding: 5px 10px;
            font-size: 0.9em;
            position: absolute;
            top: 10px;
            right: 10px;
        }
    </style>
}

<h1 class="text-center mb-4 fw-bold"><i class="bi bi-bag-check-fill"></i> Products</h1>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-3 col-md-4 col-sm-6" style="padding: 8px;">
            <div class="product-grid">
                <form asp-action="Details">
                    <input name="Count" value="1" hidden />
                    <input name="ProductID" value="@item.ProductID" hidden />
                    <div class="product-content">
                        <h2 class="title"><a asp-action="Details" asp-route-id="@item.ProductID">@item.Name</a></h2>
                        <div class="price">$@item.Price</div>
                        <ul class="product-links">
                            <li>
                                <button style="border: none;" type="submit"><i class="bi bi-bag"></i></button>
                            </li>
                            <li><a asp-action="Details" asp-route-id="@item.ProductID"><i class="bi bi-eye-fill"></i></a></li>
                        </ul>
                        <p class="desc">@item.Description</p>
                    </div>
                </form>
                <div class="product-image">
                    @if (item.ProductImages?.FirstOrDefault() != null)
                    {
                        <img class="pic-1" src="/@item.ProductImages.First().ImageUrl">
                    }
                    @if (item.ProductImages?.Count >= 2)
                    {
                        <img class="pic-2" src="/@item.ProductImages.Skip(1).FirstOrDefault()?.ImageUrl">
                    }
                    @if (item.Category != null)
                    {
                        <span class="product-sale-label">@item.Category.Name</span>
                    }
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
