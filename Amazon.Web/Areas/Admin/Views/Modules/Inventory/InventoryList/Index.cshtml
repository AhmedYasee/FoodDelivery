@await Html.PartialAsync("_InventoryNavBar")
@{
    ViewData["Title"] = "Inventory List";
}

<div class="container my-5">
    <h2 class="text-center">Inventory List for @ViewBag.InventoryName</h2>

    <!-- Filters and Search -->
    <div class="row mb-4">
        <!-- Location Filter -->
        <div class="col-md-4">
            <label for="locationFilter" class="form-label">Filter by Location</label>
            <select id="locationFilter" class="form-control">
                <option value="">All Locations</option>
                <option value="Freezer">Freezer Section</option>
                <option value="DryStorage">Dry Storage</option>
            </select>
        </div>

        <!-- Category Filter -->
        <div class="col-md-4">
            <label for="categoryFilter" class="form-label">Filter by Category</label>
            <select id="categoryFilter" class="form-control">
                <option value="">All Categories</option>
                <option value="Dairy">Dairy</option>
                <option value="Meat">Meat</option>
                <option value="Produce">Produce</option>
            </select>
        </div>

        <!-- Search Bar -->
        <div class="col-md-4">
            <label for="searchItem" class="form-label">Search by Item Name</label>
            <input type="text" id="searchItem" class="form-control" placeholder="Enter item name">
        </div>
    </div>

    <!-- Add Item Button -->
    <div class="text-end mb-3">
        <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addItemModal">Add New Item</button>
    </div>

    <!-- Inventory Items Table -->
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Item Name</th>
                <th>Stock Level</th>
                <th>Location</th>
                <th>Category</th>
                <th>Expiration Date</th>
                <th>Reorder Level</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="inventoryItemsTable">
            <!-- Placeholder rows -->
            <tr>
                <td>Milk</td>
                <td>50</td>
                <td>Freezer Section</td>
                <td>Dairy</td>
                <td>2024-12-01</td>
                <td>10</td>
                <td>
                    <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#editItemModal">Edit</button>
                    <button class="btn btn-sm btn-danger">Delete</button>
                </td>
            </tr>
            <tr>
                <td>Beef</td>
                <td>30</td>
                <td>Dry Storage</td>
                <td>Meat</td>
                <td>2024-11-20</td>
                <td>5</td>
                <td>
                    <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#editItemModal">Edit</button>
                    <button class="btn btn-sm btn-danger">Delete</button>
                </td>
            </tr>
        </tbody>
    </table>
</div>

<!-- Add Item Modal -->
<div class="modal fade" id="addItemModal" tabindex="-1" aria-labelledby="addItemModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addItemModalLabel">Add New Item</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Form for adding new items -->
                <form id="addItemForm">
                    <div class="mb-3">
                        <label for="itemName" class="form-label">Item Name</label>
                        <input type="text" class="form-control" id="itemName" placeholder="Enter item name">
                    </div>
                    <div class="mb-3">
                        <label for="itemStock" class="form-label">Stock Level</label>
                        <input type="number" class="form-control" id="itemStock" placeholder="Enter stock level">
                    </div>
                    <div class="mb-3">
                        <label for="itemLocation" class="form-label">Location</label>
                        <select id="itemLocation" class="form-control">
                            <option value="Freezer">Freezer Section</option>
                            <option value="DryStorage">Dry Storage</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="itemCategory" class="form-label">Category</label>
                        <select id="itemCategory" class="form-control">
                            <option value="Dairy">Dairy</option>
                            <option value="Meat">Meat</option>
                            <option value="Produce">Produce</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="itemExpiration" class="form-label">Expiration Date</label>
                        <input type="date" class="form-control" id="itemExpiration">
                    </div>
                    <div class="mb-3">
                        <label for="itemReorder" class="form-label">Reorder Level</label>
                        <input type="number" class="form-control" id="itemReorder" placeholder="Enter reorder level">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="addItem()">Save Item</button>
            </div>
        </div>
    </div>
</div>

<!-- Edit Item Modal -->
<div class="modal fade" id="editItemModal" tabindex="-1" aria-labelledby="editItemModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editItemModalLabel">Edit Item</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Form for editing items -->
                <form id="editItemForm">
                    <div class="mb-3">
                        <label for="editItemName" class="form-label">Item Name</label>
                        <input type="text" class="form-control" id="editItemName" value="Milk">
                    </div>
                    <div class="mb-3">
                        <label for="editItemStock" class="form-label">Stock Level</label>
                        <input type="number" class="form-control" id="editItemStock" value="50">
                    </div>
                    <div class="mb-3">
                        <label for="editItemLocation" class="form-label">Location</label>
                        <select id="editItemLocation" class="form-control">
                            <option value="Freezer">Freezer Section</option>
                            <option value="DryStorage">Dry Storage</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="editItemCategory" class="form-label">Category</label>
                        <select id="editItemCategory" class="form-control">
                            <option value="Dairy">Dairy</option>
                            <option value="Meat">Meat</option>
                            <option value="Produce">Produce</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="editItemExpiration" class="form-label">Expiration Date</label>
                        <input type="date" class="form-control" id="editItemExpiration" value="2024-12-01">
                    </div>
                    <div class="mb-3">
                        <label for="editItemReorder" class="form-label">Reorder Level</label>
                        <input type="number" class="form-control" id="editItemReorder" value="10">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="editItem()">Save Changes</button>
            </div>
        </div>
    </div>
</div>
