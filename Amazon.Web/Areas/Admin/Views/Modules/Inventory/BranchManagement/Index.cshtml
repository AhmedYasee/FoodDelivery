@await Html.PartialAsync("_InventoryNavBar")
@{
    ViewData["Title"] = "Branch Management";
}

<div class="container my-5">
    <h2 class="text-center">Manage Restaurant Branches</h2>

    <!-- Button to trigger the "Add New Branch" modal -->
    <div class="text-end mb-3">
        <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addBranchModal">Add New Branch</button>
    </div>

    <!-- Branch List Table -->
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Branch Name</th>
                <th>Location</th>
                <th>Manager</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <!-- Placeholder rows for branches -->
            <tr>
                <td>London Branch</td>
                <td>London, UK</td>
                <td>John Doe</td>
                <td>
                    <!-- Link to the Inventory Management for this Branch -->
                    <a asp-area="Admin" asp-controller="Modules" asp-action="InventoryManagement" asp-route-branch="LondonBranch" class="btn btn-sm btn-info">View Inventories</a>
                    <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#editBranchModal">Edit</button>
                    <button class="btn btn-sm btn-danger">Delete</button>
                </td>
            </tr>
            <tr>
                <td>Paris Branch</td>
                <td>Paris, France</td>
                <td>Jane Smith</td>
                <td>
                    <!-- Link to the Inventory Management for this Branch -->
                    <a asp-area="Admin" asp-controller="Modules" asp-action="InventoryManagement" asp-route-branch="ParisBranch" class="btn btn-sm btn-info">View Inventories</a>
                    <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#editBranchModal">Edit</button>
                    <button class="btn btn-sm btn-danger">Delete</button>
                </td>
            </tr>
        </tbody>
    </table>

</div>

<!-- Add Branch Modal -->
<div class="modal fade" id="addBranchModal" tabindex="-1" aria-labelledby="addBranchModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addBranchModalLabel">Add New Branch</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Form for adding a new branch -->
                <form>
                    <div class="mb-3">
                        <label for="branchName" class="form-label">Branch Name</label>
                        <input type="text" class="form-control" id="branchName" placeholder="Enter branch name">
                    </div>
                    <div class="mb-3">
                        <label for="branchLocation" class="form-label">Branch Location</label>
                        <input type="text" class="form-control" id="branchLocation" placeholder="Enter branch location">
                    </div>
                    <div class="mb-3">
                        <label for="branchManager" class="form-label">Assign Manager</label>
                        <select class="form-control" id="branchManager">
                            <option value="1">John Doe</option> <!-- Placeholder for managers -->
                            <option value="2">Jane Smith</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save Branch</button>
            </div>
        </div>
    </div>
</div>

<!-- Edit Branch Modal -->
<div class="modal fade" id="editBranchModal" tabindex="-1" aria-labelledby="editBranchModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editBranchModalLabel">Edit Branch</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Form for editing a branch -->
                <form>
                    <div class="mb-3">
                        <label for="editBranchName" class="form-label">Branch Name</label>
                        <input type="text" class="form-control" id="editBranchName" value="London Branch">
                    </div>
                    <div class="mb-3">
                        <label for="editBranchLocation" class="form-label">Branch Location</label>
                        <input type="text" class="form-control" id="editBranchLocation" value="London, UK">
                    </div>
                    <div class="mb-3">
                        <label for="editBranchManager" class="form-label">Assign Manager</label>
                        <select class="form-control" id="editBranchManager">
                            <option value="1">John Doe</option> <!-- Placeholder for managers -->
                            <option value="2">Jane Smith</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save Changes</button>
            </div>
        </div>
    </div>
</div>
