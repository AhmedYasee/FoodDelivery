@model Amazon.Models.ViewModels.OrderDetailsViewModel

@{
    ViewData["Title"] = "Order Details";
}

<div class="container mt-4">
    <h2 class="mb-4">Order Details - #@Model.OrderHeader.Id</h2>

    <div class="row">
        <!-- Customer Information -->
        <div class="col-md-6">
            <div class="card p-3 mb-4">
                <h4>Customer Information</h4>
                <p><strong>Name:</strong> @Model.OrderHeader.ApplicationUser.UserName</p>
                <p><strong>Email:</strong> @Model.OrderHeader.ApplicationUser.Email</p>
                <p><strong>Phone:</strong> @Model.OrderHeader.shippingInfo.Phone</p>
                <p><strong>Shipping Address:</strong> @Model.OrderHeader.shippingInfo.FullAddress</p>
            </div>
        </div>

        <!-- Order Information -->
        <div class="col-md-6">
            <div class="card p-3 mb-4">
                <h4>Order Information</h4>
                <p><strong>Order Date:</strong> @Model.OrderHeader.OrderDate.ToString("yyyy-MM-dd")</p>
                <p><strong>Total Amount:</strong> @Model.OrderHeader.OrderTotal.ToString("C")</p>
                <p><strong>Order Status:</strong> @Model.OrderHeader.OrderStatus</p>
                <p><strong>Payment Status:</strong> @Model.OrderHeader.PaymentStatus</p>
            </div>
        </div>
    </div>

    <hr />

    <!-- Order Items -->
    <h4>Order Items</h4>
    <table class="table table-hover table-striped">
        <thead class="table-dark">
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderDetails)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Quantity</td> <!-- Quantity Field -->
                    <td>@item.Price.ToString("C")</td> <!-- Price per unit -->
                    <td>@(item.Quantity * item.Price).ToString("C")</td> <!-- Total price per item -->
                </tr>
            }
        </tbody>
    </table>

    <!-- Back Button -->
    <a href="@Url.Action("Index", "Order")" class="btn btn-secondary mt-4">Back to Orders</a>
</div>

<!-- Custom Styles -->
<style>
    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

    .table-dark {
        background-color: #343a40;
        color: white;
    }

    .card {
        border: 1px solid #ddd;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    .container {
        max-width: 1000px;
        margin: auto;
    }
</style>
