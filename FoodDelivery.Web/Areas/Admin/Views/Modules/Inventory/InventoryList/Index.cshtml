@await Html.PartialAsync("_InventoryNavBar")
@{
    ViewData["Title"] = "Inventory List";
}

<div class="card shadow border-0 my-4">
    <div class="card-header bg-orange text-white text-center py-3">
        <h2>Inventory List</h2>
    </div>
    <div class="card-body">
        <a href="@Url.Action("AddNewItem", "Inventory", new { area = "Admin" })" class="btn btn-success mb-3">
            <i class="bi bi-plus-circle"></i> Add New Item
        </a>

        <table id="tblData" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Item Name</th>
                    <th>Type</th>
                    <th>Category</th>
                    <th>Unit Of Measurement</th>
                    <th>Batch Number</th>
                    <th>Quantity</th>
                    <th>Expiration Date</th>
                    <th>Reorder Level</th>
                    <th>Warehouse</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/inventoryLists.js"></script>
}
