@Html.Partial("_InventoryNavBar")

@model IEnumerable<UnitOfMeasurement>

@{
    ViewData["Title"] = "Units Of Measurement";
}

<style>
    .uom-table {
        width: 100%;
        margin-top: 20px;
        border-collapse: collapse;
    }

        .uom-table th, .uom-table td {
            padding: 12px 15px;
            border: 1px solid #ddd;
            text-align: left;
        }

        .uom-table th {
            background-color: #343a40;
            color: white;
            font-weight: bold;
        }

        .uom-table tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .uom-table td {
            vertical-align: middle;
        }

    .action-links a {
        margin-right: 10px;
        color: #343a40;
        text-decoration: none;
    }

        .action-links a:hover {
            color: #212224;
            text-decoration: underline;
        }

    .create-btn {
        background-color: #FF8C00;
        color: white;
        padding: 10px 20px;
        text-decoration: none;
        border-radius: 5px;
        font-size: 16px;
    }

        .create-btn:hover {
            background-color: #FF6A10;
            color: white;
        }
</style>

<h1 class="text-center">@ViewData["Title"]</h1>

<p class="text-center">
    <a asp-action="Create" class="create-btn">Create New Unit of Measurement</a>
</p>

<table class="uom-table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().UoMID)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().UoMName)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.UoMID)</td>
                <td>@Html.DisplayFor(modelItem => item.UoMName)</td>
                <td class="action-links">
                    @Html.ActionLink("Edit", "Edit", new { id = item.UoMID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.UoMID })
                </td>
            </tr>
        }
    </tbody>
</table>
