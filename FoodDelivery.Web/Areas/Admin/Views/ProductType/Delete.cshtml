@model ProductType

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Product Type</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="TypeID" hidden />

            <div class="border p-3 mt-4">
                <div class="form-floating py-2 col-12">
                    <input asp-for="TypeName" disabled class="form-control border-0 shadow" />
                    <label asp-for="TypeName" class="ms-2">Product Type Name</label>
                </div>

                <div class="row mt-3 justify-content-center">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="ProductType" asp-action="Index" class="btn btn-secondary border form-control">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
