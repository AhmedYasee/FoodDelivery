@model FoodDelivery.Models.ViewModels.ProductVM

@{
    ViewData["Title"] = Model.ProductID == 0 ? "Create" : "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
    SelectList categories = new SelectList(ViewBag.Categories, "CategoryID", "Name");
    SelectList types = new SelectList(ViewBag.Types, "TypeID", "TypeName");
    SelectList uoms = new SelectList(ViewBag.UOMs, "UoMID", "UoMName");
}

<h1 class="text-center">@ViewData["Title"] Product</h1>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <form method="post" enctype="multipart/form-data" class="row gap-3 shadow p-4 rounded bg-light">
            <div asp-validation-summary="All" class="text-danger"></div>

            <!-- Hidden input for ProductID -->
            <input asp-for="ProductID" type="hidden" />

            <!-- Name Input -->
            <div class="form-group">
                <label asp-for="Name" class="control-label mb-2 text-orange"></label>
                <input asp-for="Name" class="form-control border-orange" placeholder="Enter product name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Cost Price Input -->
            <div class="form-group">
                <label asp-for="CostPrice" class="control-label mb-2 text-orange"></label>
                <input asp-for="CostPrice" class="form-control border-orange" placeholder="Enter cost price" />
                <span asp-validation-for="CostPrice" class="text-danger"></span>
            </div>

            <!-- Sales Price Input -->
            <div class="form-group">
                <label asp-for="Price" class="control-label mb-2 text-orange"></label>
                <input asp-for="Price" class="form-control border-orange" placeholder="Enter sales price" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <!-- Category Dropdown -->
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label mb-2 text-orange">Category</label>
                <select asp-for="CategoryId" class="form-control border-orange" asp-items="categories"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <!-- Type Dropdown -->
            <div class="form-group">
                <label asp-for="TypeId" class="control-label mb-2 text-orange">Type</label>
                <select asp-for="TypeId" class="form-control border-orange" asp-items="types"></select>
                <span asp-validation-for="TypeId" class="text-danger"></span>
            </div>

            <!-- Unit of Measurement Dropdown -->
            <div class="form-group">
                <label asp-for="UnitOfMeasurementId" class="control-label mb-2 text-orange">Unit of Measurement</label>
                <select asp-for="UnitOfMeasurementId" class="form-control border-orange" asp-items="uoms"></select>
                <span asp-validation-for="UnitOfMeasurementId" class="text-danger"></span>
            </div>

            <!-- Reorder Level Input -->
            <div class="form-group">
                <label asp-for="ReorderLevel" class="control-label mb-2 text-orange"></label>
                <input asp-for="ReorderLevel" class="form-control border-orange" placeholder="Enter reorder level" />
                <span asp-validation-for="ReorderLevel" class="text-danger"></span>
            </div>

            <!-- File Input for Images -->
            <div class="form-group">
                <label class="control-label mb-2 text-orange">Images</label>
                <input type="file" multiple asp-for="files" class="form-control border-orange" />
                <span asp-validation-for="files" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="form-group mb-2">
                <input type="submit" class="btn btn-lg btn-orange form-control" value="@(Model.ProductID == 0 ? "Create" : "Update")" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-outline-orange">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
